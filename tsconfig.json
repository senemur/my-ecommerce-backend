{
  "compilerOptions": {
    "target": "ES2020",                // Node 14+ için uygun
    "module": "CommonJS",              // veya "ESNext" (Node 18+ kullanıyorsan)
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
